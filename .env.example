# ============================================
# Docker Compose Environment Variables
# ============================================
# This file is used by docker-compose.yml
# Copy this to .env and fill in your values

# ============================================
# REQUIRED: OpenAI API Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI model to use (default: gpt-4)
# Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
OPENAI_MODEL=gpt-4

# ============================================
# PostgreSQL Database Configuration
# ============================================
# Database user (default: postgres)
POSTGRES_USER=postgres

# Database password (default: postgres)
# IMPORTANT: Change this in production!
POSTGRES_PASSWORD=postgres

# Database name (default: validquery)
POSTGRES_DB=validquery

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# ============================================
# Backend API Configuration
# ============================================
# Backend API port (default: 8000)
BACKEND_PORT=8000

# Query execution timeout in seconds (default: 30)
STATEMENT_TIMEOUT=30

# Maximum number of rows returned per query (default: 100)
MAX_QUERY_LIMIT=100

# CORS origins (comma-separated list)
# For Docker: include http://localhost:3000,http://frontend:80
# For local dev: include http://localhost:5173,http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:80

# ============================================
# Frontend Configuration
# ============================================
# Frontend port (default: 3000)
FRONTEND_PORT=3000

# Frontend API URL (only needed for local development)
# For Docker: use /api (handled by nginx proxy)
# For local dev: use http://localhost:8000
VITE_API_URL=/api
